{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:prettier/@typescript-eslint",
    "plugin:node/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "linebreak-style": ["error", "unix"],
        "trailingComma": "es5",
        "endOfLine": "lf"
      }
    ],
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off"
  }
}
